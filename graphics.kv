#Kivy 1.10.1

<TitleScreen>:

    FloatLayout:
        AsyncImage:
            source: "tictactoe_title.png"
            pos: (0, 100)
        Button:
            font_size: 30
            color: 0, 1, 0, 1
            size_hint: 0.5, 0.1
            pos: (195, 150)
            id: PvP
            text: "Player v. Player"
            on_release: root.manager.current = "Game"; root.p_v_p();
        Button:
            font_size: 30
            color: 0, 1, 0, 1
            size_hint: 0.5, 0.1
            pos: (195, 85)
            id: PvC
            text: "Player v. Computer"
            on_release: root.manager.current = "Game"; root.p_v_c();

